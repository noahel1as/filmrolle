<input id="movieInput" placeholder="Filmname eingeben">

<br>

<button onclick="addMovie()">Film hinzuf√ºgen</button>
<button onclick="removeMovie()">Film entfernen</button>

<br>

<button onclick="spin()">üé≤ Film ziehen</button>
<button onclick="rollDice()">üé≤ Wer darf ziehen?</button>

<div id="result"></div>
<div id="diceResult"></div>

<script>

let movies = JSON.parse(localStorage.getItem("movies")) || [
    "Harry Potter",
    "Titanic",
    "Interstellar",
    "Shrek"
];

const reel = document.getElementById("reel");

function save(){
    localStorage.setItem("movies",JSON.stringify(movies));
}

function render(){

    reel.innerHTML="";

    movies.forEach(movie=>{

        const div=document.createElement("div");
        div.className="film";
        div.innerText=movie;

        reel.appendChild(div);

    });

}

function addMovie(){

    const input=document.getElementById("movieInput");

    if(input.value==="") return;

    movies.push(input.value);

    save();
    render();

    input.value="";

}

function removeMovie(){

    const input=document.getElementById("movieInput");

    const index=movies.indexOf(input.value);

    if(index>-1){

        movies.splice(index,1);

        save();
        render();

    }

    input.value="";

}

function spin(){

    if(movies.length===0) return;

    const index=Math.floor(Math.random()*movies.length);

    const offset=index*220;

    reel.style.transform="translateX(-"+offset+"px)";

    document.getElementById("result").innerText=
    "Heute schauen wir: "+movies[index]+" üçø";

}

function rollDice(){

    const result=Math.random()<0.5
    ? "Du darfst ziehen üôÇ"
    : "Sie darf ziehen üôÇ";

    document.getElementById("diceResult").innerText=result;

}

render();

</script>

